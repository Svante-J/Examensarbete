@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}
<!DOCTYPE HTML>


		<!-- Jumbotron, w title -->
		<div class="jumbotron text-center jumbotron-fluid">
			<div class="container">
				<h1 class="display-1">@Model.Value("pageTitle")</h1>
				<p>En studie i <span class="font-weight-bold">Umbraco</span> det vänliga publiseringsverktyget</p>
			</div>
		</div>

		<!-- Content -->
		
		<div class="container">
		
    		<div class="col-md-4">
    		    <h2>@Model.Value("pageTitle")</h2>
               <p> @Model.Value("bodyText")</p>
    		</div>	
			
		</div>

		<!-- Banner -->
		<div class="container-fluid orange-bg">
			<div class="container">

				<div class="row section">
					<div class="col-md-12 text-center">
						<h1>@Model.Value("header")</h1>
						<p>@Model.Value("subtitle") <br/><br/></p>
						<a href="" class="btn btn-inverted-orange" role="button">@Model.Value("buttonText") >></a>
					</div>
				</div>
	
			</div>
		</div>

	